{
  "name": "chatbot-webapp",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "dev": "next dev -p 3001",
    "dev:turbo": "next dev --turbo -p 3001",
    "dev:inspect": "NODE_OPTIONS='--inspect' next dev -p 3001",
    "dev:check": "node scripts/dev-health-check.js",
    "dev:fix": "node scripts/dev-troubleshoot.js --fix-auto",
    "dev:troubleshoot": "node scripts/dev-troubleshoot.js",
    "dev:monitor": "node scripts/dev-monitor.js",
    "dev:setup-hooks": "git config core.hooksPath .githooks",
    "build": "next build",
    "build:analyze": "cross-env ANALYZE=true next build",
    "build:stats": "cross-env ANALYZE=true NODE_ENV=production next build",
    "start": "next start -p 3001",
    "start:prod": "NODE_ENV=production next start -p 3001",
    "lint": "next lint",
    "lint:fix": "next lint --fix",
    "test": "vitest",
    "test:watch": "vitest --watch",
    "test:dev-server": "vitest run tests/dev-server.test.ts",
    "clean": "rm -rf .next out",
    "type-check": "tsc --noEmit",
    "perf:analyze": "npm run build:analyze && echo 'Bundle analysis complete! Check the opened browser window.'",
    "perf:audit": "npm run build && echo 'Performance audit ready for Lighthouse analysis.'",
    "perf:status": "node scripts/optimization-status.js",
    "perf:track": "echo 'Open http://localhost:3001 and check console for performance tracking. Press Ctrl+Shift+P for live report.'"
  },
  "dependencies": {
    "@emotion/react": "^11.14.0",
    "@emotion/styled": "^11.14.1",
    "@mui/material": "^7.3.2",
    "autoprefixer": "^10.4.21",
    "critters": "^0.0.23",
    "next": "15.5.3",
    "openai": "^4.71.1",
    "react": "19.0.0",
    "react-dom": "19.0.0"
  },
  "devDependencies": {
    "@next/bundle-analyzer": "^15.5.3",
    "@types/node": "^22",
    "@types/react": "^19",
    "@types/react-dom": "^19",
    "cross-env": "^10.0.0",
    "eslint": "^9",
    "eslint-config-next": "15.5.3",
    "postcss": "^8",
    "tailwindcss": "^3.4.1",
    "typescript": "^5",
    "vitest": "^2.0.5"
  }
}
