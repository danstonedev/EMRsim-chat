# Frontend environment template (safe defaults)
# Copy this file to .env.local for local development
# Example:
#   cp .env.example .env.local

# Backend API base URL (ensure this matches your backend port)
VITE_API_BASE_URL=http://localhost:3002

# Socket.IO path (optional)
# VITE_SOCKET_PATH=/socket.io/
# VITE_ASSUME_SOCKET_UNDER_BASEPATH=false

# API and fetch behavior (optional)
# VITE_API_TIMEOUT_MS=15000
# VITE_DEBUG_HISTORY_FETCH=false

# Voice autostart tuning (optional)
# VITE_VOICE_AUTOSTART=false
# VITE_VOICE_AUTOSTART_DELAY_MS=250
# VITE_VOICE_AUTOSTART_RETRY_MS=500
# VITE_VOICE_AUTOSTART_MAX_RETRIES=2

# Branding
VITE_UND_PRIMARY=#009A44
VITE_UND_GRAY=#AEAEAE

# Feature flags
VITE_VOICE_ENABLED=true
VITE_SPS_ENABLED=true
VITE_STT_FALLBACK_MS=800
VITE_VOICE_DEBUG=false
VITE_CHAT_ANIMATIONS_ENABLED=true
VITE_BANNERS_ENABLED=true

# Voice / barge-in
VITE_VOICE_BARGE_IN=false

# WebRTC/ICE (optional)
# VITE_ICE_GATHER_TIMEOUT_MS=1500
# VITE_ICE_SERVERS_JSON=[{"urls":"stun:stun.l.google.com:19302"}]

# Adaptive VAD
VITE_ADAPTIVE_VAD=true
VITE_ADAPTIVE_VAD_BADGE=false
VITE_ADAPTIVE_VAD_DEBUG=false

# Extended STT timing (optional)
# VITE_STT_EXTENDED_MS=1800

# 3D Viewer performance flags
VITE_VIEWER_AA=false
VITE_VIEWER_SHADOWS=false
VITE_VIEWER_PERF_MODE=false
VITE_RENDER_METRICS=false

# Viewer debug overlay (optional)
# VITE_VIEWER_DEBUG=false
