# Frontend dev config (no secrets)
# Note: Backend defaults to PORT=3002 (see backend/.env.example)
# If you use the frontend task that auto-creates .env.local, ensure this matches the backend port.
VITE_API_BASE_URL=http://localhost:3002

# Optional: Override the Socket.IO path (default '/socket.io/')
# Useful if your backend is mounted under a sub-path or behind a proxy
# VITE_SOCKET_PATH=/socket.io/

# Optional: If your API base includes a base path and you want Socket.IO under it
# e.g., API base = http://localhost:3002/api, socket path -> /api/socket.io/
# Set this to true to opt-in; otherwise we'll default to '/socket.io/' to avoid 404s
# VITE_ASSUME_SOCKET_UNDER_BASEPATH=false

# Branding
VITE_UND_PRIMARY=#009A44
VITE_UND_GRAY=#AEAEAE

# Feature flags
VITE_VOICE_ENABLED=true
VITE_SPS_ENABLED=true
VITE_STT_FALLBACK_MS=800
VITE_VOICE_DEBUG=false
VITE_CHAT_ANIMATIONS_ENABLED=true

# Enable barge-in (overlapping user speech while assistant is speaking) by
# relaxing browser echo cancellation / noise suppression. May increase echo.
# Accepts truthy values: 1,true,yes,on,enable
VITE_VOICE_BARGE_IN=false
VITE_BANNERS_ENABLED=true

# Adaptive VAD (noise-aware tuning)
# Learns noise/SNR from mic and auto-tunes server VAD threshold/silence and local STT fallbacks
VITE_ADAPTIVE_VAD=true
# Show a small Quiet/Noisy/Very Noisy badge next to the waveform (for validation)
VITE_ADAPTIVE_VAD_BADGE=false
# Emit periodic debug logs about adaptive choices (noise, SNR, threshold, silence)
VITE_ADAPTIVE_VAD_DEBUG=false


# 3D Viewer performance flags (safe defaults if omitted)
# Clamp device pixel ratio to reduce GPU load (built-in default [1,1.75]).
# Shadows and AA are opt-in to keep perf predictable on integrated GPUs.
# Enable perf mode to simplify lights/grid and reduce TTFP during demos.
# Accepts truthy values: 1,true,yes,on,enable (case-insensitive)
VITE_VIEWER_AA=false
VITE_VIEWER_SHADOWS=false
VITE_VIEWER_PERF_MODE=false
VITE_RENDER_METRICS=false


