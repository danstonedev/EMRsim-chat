{
  "name": "emrsim-backend",
  "version": "0.1.0",
  "private": true,
  "type": "module",
  "engines": {
    "node": ">=20.0.0",
    "npm": ">=9.0.0"
  },
  "scripts": {
    "dev": "tsx watch src/index.ts",
    "dev:debug": "NODE_OPTIONS='--inspect' tsx watch src/index.ts",
  "build": "tsup src/index.ts --format esm,cjs --sourcemap && node scripts/copy-sps-content.mjs",
    "start": "node dist/index.js",
    "lint": "eslint src --ext .ts",
    "test": "vitest run",
    "test:watch": "vitest",
    "sps:compile": "tsx src/sps/tools/compile-content.ts",
    "sps:validate": "node scripts/generateManifest.ts --validate",
  "sps:gate": "tsx src/sps/tools/validate-content.ts --strict",
  "sps:audit:todos": "tsx src/sps/tools/generate-fix-todos.ts",
  "sps:audit": "tsx src/sps/tools/audit-report.ts --out-md ../../../../scripts/content-audit-report.md --out-json ../../../../scripts/content-audit-report.json",
    "sps:kits:validate": "tsx src/sps/runtime/validation/validate-kits.ts",
    "sps:mapping:validate": "tsx src/sps/runtime/validation/validate-mapping.ts",
    "sps:validate:content": "npm run -s sps:kits:validate && npm run -s sps:mapping:validate"
  },
  "dependencies": {
    "@types/redis": "^4.0.10",
    "compression": "^1.7.4",
    "cors": "^2.8.5",
    "dotenv": "^16.4.5",
    "express": "^4.19.2",
    "express-rate-limit": "^8.1.0",
    "helmet": "^8.1.0",
    "nanoid": "^5.0.7",
    "pino": "^9.13.0",
    "pino-pretty": "^13.1.1",
    "redis": "^5.8.3",
    "socket.io": "^4.8.1",
    "socket.io-client": "^4.8.1",
    "swagger-jsdoc": "^6.2.8",
    "swagger-ui-express": "^5.0.1",
    "zod": "^3.23.8"
  },
  "devDependencies": {
    "@types/compression": "^1.7.2",
    "@types/cors": "^2.8.13",
    "@types/express": "^4.17.17",
    "@types/node": "^20.8.0",
    "@types/supertest": "^2.0.16",
    "@types/swagger-jsdoc": "^6.0.4",
    "@types/swagger-ui-express": "^4.1.6",
    "@typescript-eslint/eslint-plugin": "^8.8.0",
    "@typescript-eslint/parser": "^8.8.0",
    "eslint": "^9.13.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-prettier": "^5.5.4",
    "prettier": "^3.6.2",
    "supertest": "^7.1.4",
    "ts-node": "^10.9.1",
    "tsup": "^8.5.0",
    "tsx": "^4.7.0",
    "typescript": "^5.9.3",
    "vitest": "^1.6.1"
  },
  "optionalDependencies": {
    "better-sqlite3": "^9.6.0"
  }
}
